# Environment variables for WWC Backend

# Application
DEBUG=False
APP_NAME=WWC Backend

# Server
HOST=0.0.0.0
PORT=5000

# Database - MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/wwc
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wwc?retryWrites=true&w=majority
DATABASE_NAME=wwc

# JWT - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# CORS - Update with your client URL
CLIENT_URL=http://localhost:5174
ALLOWED_ORIGINS=["http://localhost:5174"]

# Cloudinary - Get credentials from https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Whisper Service (integrated)
# Model sizes: tiny, base, small, medium, large
WHISPER_MODEL_SIZE=base

# LibreTranslate (optional - for translation features)
LIBRETRANSLATE_URL=https://libretranslate.de/translate

# File Upload
UPLOAD_DIR=uploads/captions
MAX_UPLOAD_SIZE=10485760


SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass
EMAIL_FROM=no-reply@yourdomain.com
